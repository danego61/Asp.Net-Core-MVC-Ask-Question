@model List<QuestionModel>
<div id="question-slider" class="carousel slide" data-ride="carousel" data-interval="false">
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Count; i++)
        {
            <li data-target="#question-slider" data-slide-to="@i"></li>
        }
    </ol>
    <div class="carousel-inner">
        @foreach (QuestionModel question in Model)
        {
            <div class="carousel-item" id="question-@question.QuestionID" data-answer="@question.CorrectChoice">

                <h1 class="card-title">@question.Question</h1>
                <div class="list-group">
                    @for (int i = 0; i < question.Choices.Length; i++)
                    {
                        <a class="list-group-item list-group-item-action" data-choice="@i" data-question="@question.QuestionID">@question.Choices[i]</a>
                    }
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#question-slider" role="button" data-slide="prev" style="justify-content:left">
        <span class="carousel-control-prev-icon" aria-hidden="true" style="filter: invert(100)"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#question-slider" role="button" data-slide="next" style="justify-content:right">
        <span class="carousel-control-next-icon" aria-hidden="true" style="filter: invert(100);"></span>
        <span class="sr-only">Next</span>
    </a>
</div>